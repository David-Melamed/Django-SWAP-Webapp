{
  "AWSEBDockerrunVersion": "1",
  "containerDefinitions": [
    {
      "name": "db",
      "image": "mysql:latest",
      "essential": true,
      "memory": 100,
      "environment": [
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "password"
        },
        {
          "name": "MYSQL_DATABASE",
          "value": "my_application"
        },
        {
          "name": "MYSQL_USER",
          "value": "root"
        },
        {
          "name": "MYSQL_PASSWORD",
          "value": "password"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "mysql-data",
          "containerPath": "/var/lib/mysql"
        }
      ],
      "portMappings": [
        {
          "hostPort": 3306,
          "containerPort": 3306
        }
      ]
    },
    {
      "name": "web",
      "image": "public.ecr.aws/a9k6f9j6/django_swap:154215-200224",
      "essential": true,
      "memory": 100,
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "my_app.settings"
        },
        {
          "name": "DB_HOST",
          "value": "db"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "django-static",
          "containerPath": "/var/lib/mysql"  // Update this path accordingly
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "mysql-data",
      "host": {
        "sourcePath": "/etc/mysql-data"
      }
    },
    {
      "name": "django-static",
      "host": {
        "sourcePath": "/etc/django-static"
      }
    }
  ],
  "container_commands": [
    {
      "command": "python manage.py makemigrations",
      "leader_only": true,
      "wait_after_completion": 5
    },
    {
      "command": "python manage.py migrate",
      "leader_only": true,
      "wait_after_completion": 5
    },
    {
      "command": "python manage.py runserver 0.0.0.0:8080",
      "leader_only": true,
      "wait_after_completion": 0
    }
  ]
}







