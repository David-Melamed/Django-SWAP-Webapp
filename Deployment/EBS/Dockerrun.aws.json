{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "mysql",
      "image": "mysql:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 3306,
          "containerPort": 3306
        }
      ],
      "environment": [
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "password"
        },
        {
          "name": "MYSQL_DATABASE",
          "value": "my_application"
        },
        {
          "name": "MYSQL_USER",
          "value": "root"
        },
        {
          "name": "MYSQL_PASSWORD",
          "value": "password"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "mysql-data",
          "containerPath": "/var/lib/mysql"
        }
      ]
    },
    {
      "name": "django",
      "image": "public.ecr.aws/a9k6f9j6/django_swap:154215-200224",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        }
      ],
      "command": ["/bin/bash", "-c", "/usr/local/bin/docker-entrypoint.sh"],
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "my_app.settings"
        },
        {
          "name": "DB_HOST",
          "value": "mysql"
        }
      ]
    }
  ],
  "mountPoints": [
    {
      "sourceVolume": "django-static",
      "containerPath": "/app/static"
    }
  ],
  "volumes": [
    {
      "name": "mysql-data",
      "host": {
        "sourcePath": "/etc/mysql-data"
      }
    },
    {
      "name": "django-static",
      "host": {
        "sourcePath": "/etc/django-static"
      }
    }
  ],
  "container_commands": [
    {
      "command": "python manage.py makemigrations",
      "leader_only": true,
      "wait_after_completion": 5
    },
    {
      "command": "python manage.py migrate",
      "leader_only": true,
      "wait_after_completion": 5
    },
    {
      "command": "python manage.py runserver 0.0.0.0:8080",
      "leader_only": true,
      "wait_after_completion": 0
    }
  ]
}